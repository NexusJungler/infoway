{% extends 'base.html.twig' %}

{% block title %}Criterion{% endblock %}

{% block body %}
    <h1>Criterion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ criterion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ criterion.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ criterion.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ criterion.position }}</td>
            </tr>
            <tr>
                <th>Selected</th>
                <td>{{ criterion.selected ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('criterions_index') }}">back to list</a>

    <a href="{{ path('criterions_edit', {'id': criterion.id}) }}">edit</a>

    {{ include('criterions/_delete_form.html.twig') }}
