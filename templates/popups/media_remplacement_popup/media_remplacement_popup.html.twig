<section class="popup_container popup_media_remplacement_container">

    <article class="popup popup_media_remplacement">

        <div class="popup_header">

            <div class="left_side popup_header_item">
                {#<div class="item icon-container">#}
                {#<i class="icon icon-picto-mediathque"></i>#}
                {#</div>#}

                <div class="item title_container">
                    <p class="title">Médiathèque</p>
                </div>

                <div class="item subtitle_container">
                    <p class="subtitle">Remplacer un média</p>
                </div>

                <div class="item media_name_container">
                    <p class="media_name"></p>
                </div>

            </div>

            <div class="right_side popup_header_item">
                <div class="item close_popup_button_container">
                    <button type="button" class="close_modal_button">X</button>
                </div>
            </div>

        </div>

        <div class="popup_body">

            <div class="popup_body_item container">

                <div class="container_header">

                    <div class="side left_side filters_container filter_by_file_type_media_type_container">
                        <button type="button" class="btn filter filter_by_file_type" data-target="image">Images</button>
                        <button type="button" class="btn filter filter_by_file_type" data-target="video">Vidéos</button>

                        {#{% if app.request.get('_route') is same as('media::editSynchro') %}#}
                            <button type="button" class="btn filter filter_by_media_type" data-target="sync">Synchros</button>
                        {#{% endif %}#}

                        <button type="button" class="btn filter filter_by_media_type show_only_web_service" data-target="service_web" disabled>Service Web</button>
                        <button type="button" class="btn filter filter_by_media_type show_only_external_source" data-target="source_ext" disabled>Sources Ext.</button>
                        <button type="button" class="btn filter filter_by_media_type show_only_thematic" data-target="them">Thématiques</button>
                        <button type="button" class="btn filter filter_by_media_type show_only_template" data-target="template">Templates</button>
                        {#<button type="button" class="btn show_only_local_medias">Local</button>#}

                    </div>

                    <div class="side right_side filters_container">

                        <div class="filter_container_association">

                            <div class="filter filter_by_criterion display-content-columns">
                                <div class="display-content-poste">
                                    <button type="button" class="drop-btn ">
                                        <label class="container-input">
                                            <input type="checkbox" value="">
                                            <span class="container-rdo"></span>
                                        </label>
                                        <span class="container-criterion">Criterion</span>
                                        <div class="drop-btn-icone"><i class="fas fa-angle-down"></i></div>
                                    </button>
                                    <div class="display-content-down filter_by_criterions scrollbar">
                                        {% for criterion in criterions %}
                                            <div class="product-select-col scrollbar">
                                                <label class="container-input">
                                                    <input type="checkbox" value="{{  criterion.id }}">
                                                    <span class="container-rdo"></span>
                                                </label>
                                                <span class="container-criterion">{{ criterion.name }}</span>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                            <div class="filter filter_by_tag display-content-columns">
                                <div class="display-content-poste">
                                    <button type="button" class="drop-btn ">
                                        <label class="container-input">
                                            <input type="checkbox" value="">
                                            <span class="container-rdo"></span>
                                        </label>
                                        <p class="container-tags">
                                            <span class="mini-cercle" style="background: darkgray;"></span>
                                            <span class="current-tags-name">Tags</span>
                                        </p>
                                        <div class="drop-btn-icone"><i class="fas fa-angle-down"></i></div>
                                    </button>
                                    <div class="display-content-down filter_by_tag scrollbar">
                                        {% for tag in tags %}
                                            <div class="product-select-col ">
                                                <label class="container-input">
                                                    <input type="checkbox" value="{{  tag.id }}">
                                                    <span class="container-rdo"></span>
                                                </label>
                                                <p class="container-tags">
                                                    <span class="mini-cercle" style="background: {{tag.color}};"></span>
                                                    <span class="current-tags-name">{{ tag.name }}</span>
                                                </p>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                        </div>

                        <button type="button" class="btn filter_validation_btn"><i class="fas fa-bars"> </i>Filtrer</button>

                        <div class="search_element_container filter_with_search_container">
                            <input type="search" class="filter filter_with_search" name="search[product]" placeholder="Rechercher un élément...">
                            <i class="fas fa-search"></i>
                        </div>

                    </div>

                </div>

                <div class="container_body">

                    <div class="side left_side">

                        <div>
                            <p class="title">Média sélectionné :</p>
                        </div>

                        <div class="media_to_replace_miniature_container container">

                        </div>

                        <div class="media_name_container container">

                        </div>

                        <div class="media_associated_datas_container container">

                            <div class="media_criterions_container">

                            </div>

                            <div class="media_tags_container">

                            </div>

                        </div>

                        <div class="media_diffusion_location_container">

                            <div class="list_header">
                                <i class="fas fa-spinner"></i>
                                <span>En diffusion sur :</span>
                            </div>

                            <div class="list_content">

                            </div>

                        </div>

                    </div>

                    <div class="side right_side">

                        <div class="container">

                            <div class="container_header">
                                <p>Sera remplacé par :</p>
                                <div class="media_substitute_name_container">
                                    <p class="media_substitute_name"></p>
                                </div>
                            </div>

                            <div class="container_body">

                                <div class="substitutes_container">

                                    {% for media in medias %}

                                        {# on attendant le css des synchro, on ne les affiches pas #}
                                        <div class="card substitute {{ (media.mediaType is same as("sync")) ? 'hidden' : '' }}" id="card_{{ media.id }}" data-miniature_medium_exist="{{ (media.miniature_medium_exist is same as(true)) ? 'true' : 'false' }}" data-media_id="{{ media.id }}" data-file_type="{{ media.fileType }}" data-media_type="{{ media.mediaType }}" data-customer="{{ app.session.get('current_customer').name | lower }}">

                                            <div class="card_header">
                                                <label class="container-input">
                                                    <input type="checkbox" class="choice_substitute">
                                                    <span class="container-rdo"></span>
                                                </label>
                                            </div>

                                            <div class="card_body">

                                                <div class="substitute_miniature_container media_miniature_container">

                                                    {% if media.media_low_miniature_exist is same as(false) %}

                                                        <img class="substitute_miniature substitute_{{ fileType }}" src="/build/images/no-available-image.png" alt="/build/images/no-available-image.png">

                                                    {% else %}

                                                        <div class="media_container_{{ (media.fileType is same as('image')) ? 'img' : 'video' }} container">
                                                            <div class="media_container_arrows">
                                                                <i class="fas fa-expand-arrows-alt show_expanded_miniature"></i>
                                                            </div>

                                                            {% if media.fileType is same as('image') %}

                                                                <img class="media_miniature substitute_miniature miniature_image" src="/miniatures/{{ app.session.get('current_customer').name| lower }}/image/{{ media.mediaType }}/low/{{ media.id }}.png"
                                                                     alt="/miniatures/{{ app.session.get('current_customer').name | lower }}/image/{{ media.mediaType }}/low/{{ media.id }}.png">

                                                            {% else %}

                                                                <video class="media_miniature substitute_miniature miniature_video" controls>
                                                                    <source src="/miniatures/{{ app.session.get('current_customer').name| lower }}/video/{{ media.mediaType }}/low/{{ media.id }}.mp4" type="{{ media.mimeType }}">
                                                                </video>

                                                            {% endif %}

                                                        </div>

                                                    {% endif %}

                                                </div>

                                                <div class="substitute_name_container">
                                                    <p class="substitute_name">{{ media.name }}</p>
                                                </div>

                                            </div>

                                        </div>

                                    {% endfor %}

                                </div>

                            </div>

                            <div class="container_footer {{ (app.request.attributes.get('_route') is same as('programming_programming_mould_new'))? 'prog_footer' : '' }}">


                                <div class="remplacement_location_container container_child">

                                    <div class="left">
                                        <span>Remplacé dans :</span>
                                    </div>

                                    <div class="right">

                                        <div class="remplacement_location_choices_container">

                                            <label>
                                                <input type="checkbox" class="remplacement_location" value="current_screen"> Cet écran
                                            </label>

                                            <label>
                                                <input type="checkbox" class="remplacement_location" value="current_prog"> Cette prog.
                                            </label>

                                            <label>
                                                <input type="checkbox" class="remplacement_location" value="all_prog"> Toutes les prog.
                                            </label>

                                        </div>

                                        <div class="others_programmations_container">

                                            <div class="list_header">
                                                <span>Autres programmations</span>
                                            </div>

                                            <div class="list_content">

                                            </div>

                                        </div>

                                    </div>

                                </div>

                                <div class="remplacement_date_container container_child">

                                    <div class="left">

                                        <i class="far fa-clock"></i>
                                        <span>Date :</span>

                                    </div>

                                    <div class="right">

                                        <div>
                                            <span class="error"></span>
                                            <label>
                                                Du <input type="date" class="form_input remplacement_date_choice_input remplacement_date_start">
                                            </label>
                                        </div>

                                        <div>
                                            <span class="error"></span>
                                            <label>
                                                Au <input type="date" class="form_input remplacement_date_choice_input remplacement_date_end">
                                            </label>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <div class="popup_footer">

            <div class="actions_buttons_container">
                <button class="btn close_modal_button cancel" type="button">Annuler</button>
            </div>

            <div class="actions_buttons_container">
                <button class="btn" type="button">Voir dans les programmations</button>
            </div>

            <div class="actions_buttons_container">
                <button class="btn validate_remplacement_btn" type="button" disabled>Remplacer</button>
            </div>

        </div>

    </article>

</section>