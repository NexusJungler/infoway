<section class="popup_container popup_media_remplacement_in_prog_container">

    <article class="popup popup_media_remplacement_in_prog">

        <div class="popup_header">

            <div class="left_side popup_header_item">
                <div class="item icon-container">
                    <i class="icon icon-picto-mediathque"></i>
                </div>

                <div class="item title_container">
                    <p class="title">Médiathèque</p>
                </div>

                <div class="item subtitle_container">
                    <p class="subtitle">Remplacer un média</p>
                </div>

                <div class="item media_name_container">
                    <p class="media_name"></p>
                </div>

            </div>

            <div class="right_side popup_header_item">

                <div class="item close_popup_button_container">
                    <button type="button" class="close_modal_button">X</button>
                </div>

            </div>

        </div>

        <div class="popup_body">

            <div class="popup_body_item container">

                <div class="container_header">

                    <div class="side left_side filters_container filter_by_media_category_container">

                        <button type="button" class="btn show_only_images">Images</button>
                        <button type="button" class="btn show_only_videos">Vidéos</button>
                        <button type="button" class="btn show_only_synchros">Synchros</button>
                        <button type="button" class="btn show_only_web_service" disabled>Service Web</button>
                        <button type="button" class="btn show_only_external_source" disabled>Sources Ext.</button>
                        <button type="button" class="btn show_only_thematic" disabled>Thématiques</button>
                        <button type="button" class="btn show_only_template">Templates</button>

                    </div>

                    <div class="side right_side filters_container">

                        <select class="filter_by_categories">
                            <option value="">Tout afficher</option>
                            {% for categorie in categories %}
                                <option value="{{ categorie.id }}">{{ categorie.name }}</option>
                            {% endfor %}
                        </select>

                        <select class="filter_by_criterions">
                            <option value="">Tout afficher</option>
                            {% for criterion in criterions %}
                                <option value="{{ criterion.id }}">{{ criterion.name }}</option>
                            {% endfor %}
                        </select>

                        <select class="filter_by_tags">
                            <option value="">Tout afficher</option>
                            {% for tag in tags %}
                                <option value="{{ tag.id }}">{{ tag.name }}</option>
                            {% endfor %}
                        </select>

                        <button type="button" class="btn filter_validation_btn">Filtrer</button>

                        <input type="search" class="filter filter_with_search" name="search[product]" placeholder="Rechercher un élément...">

                    </div>

                </div>

                <div class="container_body">

                    <div class="side left_side">

                        <div class="media_miniature_container container">

                        </div>

                        <div class="media_name_container container">

                        </div>

                        <div class="media_associated_datas_container container">

                            <div class="media_criterions_container">

                            </div>

                            <div class="media_tags_container">

                            </div>

                        </div>

                        <div class="media_diffusion_location_container container">

                            <div class="container_header">
                                <div class="icon_container">
                                    <i class="fas fa-spinner"></i>
                                </div>
                                <span class="container_header_info" >En diffusion sur </span>
                            </div>

                            <div class="container_body">

                            </div>

                        </div>

                    </div>

                    <div class="side right_side">

                        <div class="media_substitute_name_container">
                            <p>Remplacé par :</p>
                            <span class="media_substitute_name"></span>
                        </div>

                        <div class="substitutes_container">

                            {% for media in medias %}

                                <div class="card substitute" data-media_id="{{ media.id }}">

                                    <div class="card_header">
                                        <input type="checkbox" class="choice_substitute">
                                    </div>

                                    <div class="card_body">

                                        <div class="substitute_miniature_container">

                                            {% if media.media_low_miniature_exist is same as(false) %}

                                                <img class="substitute_miniature substitute_{{ media_type }}" src="/build/images/no-available-image.png" alt="/build/images/no-available-image.png">

                                            {% else %}

                                                {% if media.media_type is same as('image') %}

                                                    <div class="media_container_img container">
                                                        <div class="media_container_arrows">
                                                            <i class="fas fa-expand-arrows-alt"></i>
                                                        </div>
                                                        <img class="media_miniature substitute_miniature miniature_image" src="/miniatures/{{ app.session.get('current_customer').name| lower }}/images/low/{{ media.id }}.png"
                                                             alt="/miniatures/{{ app.session.get('current_customer').name | lower }}/images/low/{{ media.id }}.png">
                                                    </div>


                                                {% elseif media.media_type is same as('video') %}

                                                    <div class="media_container_video container">
                                                        <div class="media_container_arrows">
                                                            <i class="fas fa-expand-arrows-alt"></i>
                                                        </div>
                                                        <video class="media_miniature substitute_miniature miniature_video"controls>
                                                            <source src="/miniatures/{{ app.session.get('current_customer').name| lower }}/videos/low/{{ media.id }}.mp4" type="{{ media.mimeType }}">
                                                        </video>
                                                    </div>

                                                {% endif %}

                                            {% endif %}

                                        </div>

                                        <div class="substitute_name_container">
                                            {#<span class="substitute_name">{{ media.name }}</span>#}
                                        </div>

                                    </div>

                                </div>

                            {% endfor %}

                        </div>

                        <div class="remplacement_infos_setting_container">

                            <div class="side left_side">

                                <div class="left_row helper_container">

                                    <p class="helper">Remplacé dans :</p>

                                </div>

                                <div class="right_row">

                                    <div class="col remplacement_location_container">

                                        <label>
                                            <input type="radio" class="media_remplacement_location" value="current_screen" name="media_remplacement[location]"> cet écran
                                        </label>

                                        <label>
                                            <input type="radio" class="media_remplacement_location" value="current_prog" name="media_remplacement[location]"> cette prog.
                                        </label>

                                        <label>
                                            <input type="radio" class="media_remplacement_location" value="all_prog" name="media_remplacement[location]"> toutes les prog.
                                        </label>

                                    </div>

                                    <div class="col others_programmations_list_container">

                                    </div>

                                </div>

                            </div>

                            <div class="side right_side">

                                <div class="row">
                                    <div class="icon_container">
                                        <i class="far fa-clock"></i>
                                    </div>
                                    <span>Date</span>
                                </div>

                                <div class="row remplacement_date_container">

                                    <div class="col">
                                        <label>
                                            Du <input type="date" class="remplacement_date_start" name="media_remplacement[date][start]">
                                        </label>
                                    </div>
                                    <div class="col">
                                        <label>
                                            Au <input type="date" class="remplacement_date_end" name="media_remplacement[date][end]">
                                        </label>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <div class="popup_footer">

            <div class="actions_buttons_container">
                <button class="btn close_modal_button cancel" type="button">Annuler</button>
            </div>

            <div class="actions_buttons_container">
                <button class="btn" type="button">Voir dans les programmations</button>
            </div>

            <div class="actions_buttons_container">
                <button class="btn validate_association_btn" type="button" disabled>Valider</button>
            </div>

        </div>

    </article>

</section>