
{{ form_start(form) }}
<div class="bloc-create-tags row" >
        {{ form_widget(form.tagToCreate, {'attr': {'class': 'row'} }) }}
         <button type="button" class="btn" id="add_tag">Créer TAG</button>
{#        <label>Nom : </label>#}
