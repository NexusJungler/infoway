
{{ form_start(form) }}

    <div class="row">
        <table class="table-tags">
            <thead>
                <tr>
                    <th><span class="cercle-color"></span></th>
                    <th>TAG créé</th>
                    <th>Description</th>   
                </tr>
            </thead>
            <tbody>
                {% for tag in form.tags %}
                    <tr>
                        <td>
                            {{ form_widget(tag.color, {'attr': {'class': 'tags-color'} }) }}
                        </td>
                        <td>
                            {{ form_widget(tag.name, {'attr': {'class': 'tags-input'} }) }} 
                        </td>
                        <td>
                            {{ form_widget(tag.description, {'attr': {'class': 'tags-desc'} }) }} 
                        </td>
                    </tr>                               
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="bloc-site">
    
        <div class="content-site">
            <div class="row">
                <h2 class="title-site">TAGS affectés au site : </h2> 
                <input type="search" class="search" id="site-search" name="q" aria-label="Search" placeholder="Rechercher un élément..." >
            </div>
        </div>

        <div class="table-site">
        <table >
             <thead>
                <tr>
                    <th>
                        <label class="container-input">
                            <input type="checkbox"> Site <i class="fas fa-angle-down"></i>
                            <span class="container-rdo"></span>
                        </label>
                    </th>
                    <th>Adresses <i class="fas fa-angle-down"></i></th>
                </tr>
            </thead>
            <tbody>
                {% for site in form.sites %}
                {{dump(site)}}
                    <tr>
                        <td class="">
                            {{ form_widget(site, {'attr': {'class': ''} }) }}
                            {# {{ form_label(site.label, {'attr': {'class': ''} }) }} #}
                        </td>
                        <td>
                            Adresses
                        </td>
                    </tr>            
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="btn-tag-enregistrer">
        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    </div>
    
{{ form_end(form) }}
