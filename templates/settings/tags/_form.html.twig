</div>
    <div class="" >
        <div class="info-tags">
            <ul>
                <li><img src="{{ asset('/build/images/color_picker.png') }}" alt="color_picker"></li>
                <li>TAG créé</li>
                <li>Description</li>
            </ul>
        </div>
        <ul class="tags tags_list row " data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}" data-widget-tags="{{ '<li></li>'|e }}">
            {% for tag in form.tags %}

                <li>
                    <div>
                        <div>{{ form_widget(tag.color, {'attr': {'class': 'tags-color'} }) }}</div>
                        <div>
                            <span class="color_input"></span>
                            {{ form_widget(tag.name, {'attr': {'class': 'tags-input'} }) }}
                        </div>
                        <div>{{ form_widget(tag.description, {'attr': {'class': 'tags-desc'} }) }}</div>
                    </div>
                     
                </li>                         
            {% endfor %}
        </ul>
    </div>

    <div class="bloc-site">
    
        <div class="content-site">
            <div class="row">
                <h2 class="title-site">TAGS affectés au site : </h2> 
                <div>
                    <input type="search" class="search" id="site-search" name="q" aria-label="Search" placeholder="Rechercher un élément..." ><i class="fas fa-search"></i>
                </div>
            </div>
        </div>

        <div class="table-site">
        <table >
             <thead>
                <tr>
                    <th>
                        <label class="container-input">
                            <input type="checkbox"> Site <i class="fas fa-angle-down"></i>
                            <span class="container-rdo"></span>
                        </label>
                    </th>
                    <th>Adresses <i class="fas fa-angle-down"></i></th>
                </tr>
            </thead>
            <tbody class="tbody-serach">                
                {% for site in form.sites %}
                    {% set currentsite = form.sites.vars.choices[site.vars.value].data %}
                    <tr>
                        <td>
                            {{ form_widget(site, {'attr': {'class': ''} }) }}
                            {{  form_label(site) }}
                        </td>
                        <td>
                            {{ currentsite.adress }}
                        </td>
                    </tr>            
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="btn-tag-enregistrer">
        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    </div>
    
{{ form_end(form) }}
