{% extends 'base.html.twig' %}

{% block title %}Modifier Tag{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('tags') }}
{% endblock %}

{% block body %}
 <main class="main main-tags">
        <div class="main-content">

            <section class="jumbotron">
            
                {% block settingtitle %}
                    {% include 'home/home-info.html.twig' with { 'pageTitle': 'Configuration', 'sousTitle': 'Tags', 'showSecondTitles': true } %}
                {% endblock %}

                {% block wrapper %}
                    {% include 'wrapper/wrapper_settings.html.twig'  %}
                {% endblock %}
                
            </section>

            {% block maincontent %}
                <section class="wrapper_tabcontent wrapper-tags">
                    <div id="setting-tags" class="tab-content current edit-tags">

                        <article class="tab-content-title">
                            <h3 class="title">Modifier TAG</h3>
                        </article>

                        <article class="display setting-display ">
                            <div class="display-content">
                                <div class="display-btn">
                                    {{ include('settings/tags/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </article>

                        <article class="content-edit-tags">
                            {{ include('settings/tags/_edit_form.html.twig', {'button_label': 'Enregistrer'}) }}
                        </article>
                    
                    </div>
                </section>
            {% endblock %}
                
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('tags') }}
{% endblock javascripts %} 