{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <main class="main main_enseigne">
        <div class="main-content">

            <section class="jumbotron">

                {% block settingtitle %}
                    {% include 'home/home-info.html.twig' with { 'pageTitle': 'Configuration', 'sousTitle': 'Enseigne', 'showSecondTitles': true } %}
                {% endblock %}

                {% block wrapper %}
                    {% include 'wrapper/wrapper-settings.html.twig'  %}
                {% endblock %}
    
            </section>

            <section class="wrapper_tabcontent">

                <div id="setting-enseigne" class="tab-content current enseigne">

                    <h1>Customer</h1>

                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ customer.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ customer.name }}</td>
                            </tr>
                            <tr>
                                <th>Logo</th>
                                <td>{{ customer.logo }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('customers_index') }}">back to list</a>

                    <a href="{{ path('customers_edit', {'id': customer.id}) }}">edit</a>

                    {{ include('settings/customers/_delete_form.html.twig') }}

                </div>
            
            </section>

        </div>
    </main>




    
{% endblock %}
