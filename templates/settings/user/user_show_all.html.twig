{% extends "base.html.twig" %}





{% block body %}

    <div style="margin-left: 15%">

        <h1>List of users</h1>

        <table>

            <thead>

                <tr>
                    <th>#</th>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Customer</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Actions</th>
                </tr>

            </thead>

            <tbody>

            {% for user in users %}
                <tr>
                    <td></td>
                    <td> {{ user.id }} </td>
                    <td> {{ user.username }} </td>
                    <td> {{ user.customer.name }} </td>
                    <td> {{ user.firstName }} </td>
                    <td> {{ user.lastName }} </td>
                    <td>
                        <a style="color: #000 !important;" href="{{ path('user::showUserPermissions', { id: user.id }) }}">Show permissions</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>

        </table>

    </div>


{% endblock %}

