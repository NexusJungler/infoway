{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <main class="main main_setting">
        <div class="main-content">

            <section class="jumbotron">

               {% block settingtitle %}
                    {% include 'home/home-info.html.twig' with { 'pageTitle': 'Configuration', 'sousTitle': 'Enseigne', 'showSecondTitles': true } %}
                {% endblock %}

                <article class="wrapper">
                    <div class="wrapper-content">
                        <div class="nav-prev"><i class="fas fa-arrow-left"></i></div>
                        <ul class="tabs">
                            <a href="{{ path('app:enseigne') }}"><li class=" {% if app.request.attributes.get('_route') == 'app:enseigne' %}  current {% endif %}" data-tab="setting-enseigne" data-tab-text="settings"> <p class="css-tab__label">Enseigne</p></li></a>
                            <a href="{{ path('users:view') }}"><li class=" {% if app.request.attributes.get('_route') == 'users:view' %}  current {% endif %}" data-tab="setting-user" data-tab-text="settings"><p class="css-tab__label">Utilisateurs</p></li></a>
                            <a href="{{ path('criterions_lists_index') }}"><li class="{% if app.request.attributes.get('_route') == 'criterions_lists_index' %}  current {% endif %}" data-tab="setting-criteres" data-tab-text="settings"><p class="css-tab__label">Critères</p></li></a>
                            <a href="{{ path('tags_index') }}"><li class=" {% if app.request.attributes.get('_route') == 'tags_index' %}  current {% endif %}" data-tab="setting-tags" data-tab-text="settings"> <p class="css-tab__label">TAGS</p> </li></a>
                        </ul>
                        <div class="nav-next"><i class="fas fa-arrow-right"></i></div>
                    </div>
                </article>
                
            </section>

            <section class="wrapper_tabcontent">

                <div id="setting-tags" class="tab-content current tags">

                    <article class="tab-content-title">
                        <h3 class="title">Gestion des TAGS</h3>
                        <p>SUPER WILD COFFEE</p>
                    </article>

                    <article class="display setting-display ">
                        <div class="display-content">
                            <div class="display-btn">
                                <a href="{{ path('tags_new') }}"  class="btn" ><i class="fas fa-plus"></i>Créer TAG</a>
                                <button type="button" class="btn duplicate-table"><a href=""><i class="fas fa-plus"></i>Dupliquer</a></button>
                                <button type="button" class="btn modified-table"><i class="far fa-edit"></i>Modifier</button>
                                <button type="button" class="btn delete-table" data-tablelistdelete="site"><i class="fas fa-trash"></i>Supprimer</button>
                            </div>
                        </div>
                    </article> 

                    <article class="content-tags table"> 
                        <table class="table-custome">
                            <thead class="table-info thead-info">
                                <tr>
                                    <th>Critères</th>
                                    <th>Description du critère</th>
                                </tr>
                            </thead>
                            <tbody class="tbody tbody-content scrollbar-table">
                        
                            </tbody>
                        </table>
                    <article>

                </div>
                
            </section>

        </div>
    </main>
{% endblock %}

