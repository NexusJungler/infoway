{% extends 'setting.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block maincontent %}
    <section class="wrapper_tabcontent">

        <div id="setting-tags" class="tab-content current tags">

            <article class="tab-content-title">
                <h3 class="title">Gestion des TAGS</h3>
                <p>SUPER WILD COFFEE</p>
            </article>

            <article class="display setting-display ">
                <div class="display-content">
                    <div class="display-btn">
                        <a href="{{ path('tags_new') }}"  class="btn" ><i class="fas fa-plus"></i>Créer TAG</a>
                        <button type="button" class="btn duplicate-table"><a href=""><i class="fas fa-plus"></i>Dupliquer</a></button>
                        <button type="button" class="btn modified-table"><i class="far fa-edit"></i>Modifier</button>
                        <button type="button" class="btn delete-table" data-tablelistdelete="site"><i class="fas fa-trash"></i>Supprimer</button>
                    </div>
                </div>
            </article> 

            <article class="content-tags table"> 
                <table class="table-custome">
                    <thead class="table-info thead-info">
                        <tr>
                            <th>Critères</th>
                            <th>Description du critère</th>
                        </tr>
                    </thead>
                    <tbody class="tbody tbody-content scrollbar-table">
                    {% for tag in tags %}
                        <tr class="tags-poster">
                            <td>
                                <label class="container-input">
                                    <input type="radio" name="tags{{ tag.id }}" id="{{ tag.id }}">
                                    <span class="container-rdo-tags"></span>
                                </label>
                                <p class="container-tags">{{ tag.name }} </p></td>
                            <td class="container-tags-desc">{{ tag.description }}</td>
                            <td>
                                <a href="{{ path('tags_show', {'id': tag.id}) }}">show</a>
                                <a href="{{ path('tags_edit', {'id': tag.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            <article>

        </div>
        
    </section>
{% endblock %}
