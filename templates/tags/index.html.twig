{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><input type="checkbox"></td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tags_new') }}">Create new</a>
{% endblock %}
