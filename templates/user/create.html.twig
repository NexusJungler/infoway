{% extends 'setting.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('create-user') }}
{% endblock %}

{%  block maincontent %}
    <section class="wrapper_tabcontent">

        <article id="setting-user" class=" tab-create tab-create-user current">

            <div class="tab-content-title">
                <h3 class="title">Créer un Utilisateur</h3>
                <p>(vous êtes ADMIN)</p>
            </div>

            <form action="{{ path('users::create::process') }}" method="post" name="user" id="create-user">

                {# <article class="display setting-display ">
                    <div class="display-content">
                        <div class="display-btn">
                            <button type="button" class="btn add-table"><i class="fas fa-plus"></i>Créer</button>
                            <button type="button" class="btn duplicate-table"><a href=""><i class="fas fa-plus"></i>Dupliquer</a></button>
                            <button type="button" class="btn modified-table"><i class="far fa-edit"></i>Modifier</button>
                            <button type="button" class="btn delete-table" data-tablelistdelete="site"><i class="fas fa-trash"></i>Supprimer</button>
                        </div>
                    </div>
                </article > #}

                <div class="form-content">

                    <div class="row">
                        <div class="row">
                            <label class="form-label">Prenom</label>
                            <input type="text"  name="user[lastname]"   placeholder="Prenom" class="input-custome" required/>
                        </div>
                        <div class="row">
                            <label class="form-label" for="fristname">Nom</label>
                            <input type="text" name="user[fristname]"  placeholder="Nom" class="input-custome" required/>
                        </div>
                    </div>

                    <div class="row col-email">
                        <label class="form-label" for="email">Login/Mail</label>
                        <input type="email" name="user[email]" id="email" placeholder="Email" class="input-custome"  required/>
                    </div>
                    <div class="row col-phone">
                        <label class="form-label" for="phone">Téléphone</label>
                        <input type="tel" name="user[phone]" placeholder="Numero de téléphone" class="input-custome" />
                    </div>

                </div>

                <p class="message-error"></p>

                <div class="form-content form-content-chkbox">
                    <div class="row">
                        <label class="form-label" for="phone">Périmètres :</label>
                        <div class="row row-chkbox">
                            {% if givablePerimeters is defined and givablePerimeters is iterable %}
                                {% for  perimeter in givablePerimeters %}
                                    {% if perimeter.name is defined and perimeter.level is defined %}
                                        <label class="container-chkbox">{{ perimeter.name }}
                                            <input type="radio" name="user[perimeter]" value="{{ perimeter.id }}">
                                            <span class="checkmark-chkbox"></span>
                                        </label>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="form-content-table">

                    <div class="content-table-left">
                        <p class="table-titel">Enseigne</p>
                        <div class="table">
                            <table class="table-custome row-chkbox" >
                                <thead  class="table-info thead-content ">
                                <tr>
                                    <th>
                                        <label class="container-chkbox">Tous
                                            <input type="checkbox" name="selectenseigne" value="tous" id="selectAll" >
                                            <span class="checkmark-chkbox"></span>
                                        </label>
                                    </th>
                                    <th>Role</th>
                                    <th>Affichies sites</th>
                                </tr>
                                </thead>
                                <tbody class="tbody tbody-content scrollbar-table">

                                {% if givableRoles is defined and  givableRoles is iterable %}
                                    
                                    {% for givableRoleInfosByCustomer in givableRoles %}
        
                                        {% set  givableRolesCustomer  = givableRoleInfosByCustomer ['customer'] %}
                                        {% set  givableRoles  = givableRoleInfosByCustomer ['roles'] %}

                                        {% if  givableRolesCustomer.name is defined  and givableRolesCustomer.id is defined  %}
                                            <tr class="input{{ givableRolesCustomer.id }}">

                                                <td>
                                                    <label class="container-chkbox">{{ givableRolesCustomer.name }}
                                                        <input type="checkbox" name="showenseignesites[]"  class="input{{ givableRolesCustomer.id }}" value={{ givableRolesCustomer.id }}>
                                                        <span class="checkmark-chkbox"></span>
                                                    </label>
                                                </td>

                                                <td >
                                                    <div class="select" >
                                                        <select class="select-list select-role" name={{"user[roles][enseigne][" ~ givableRolesCustomer.id ~ "]"  }}>
                                                            <option>Choisir rôle </option>
                                                            {% if givableRoles is defined and  givableRoles  is iterable %}

                                                                {% for givableRole in givableRoles  %}
                                                                    {% if  givableRole.name is defined and  givableRole.id is defined  %}
                                                                        <option value={{ givableRole.id }} >{{ givableRole.name }}</option>
                                                                    {% endif %}
                                                                {% endfor %}
                                                            {% endif  %}
                                                        </select>
                                                    </div>
                                                </td>

                                                <td>
                                                    <button class="btn-display-teach" type="button" data-list-enseigne="{{ givableRolesCustomer.name }}">voir</button>
                                                </td>

                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                {% endif  %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div  class="content-table-right">
                        <p class="table-titel">Site</p>
                        <div class="table">
                            <table class="table-custome row-chkbox" >

                                <thead  class="table-info thead-content">
                                    <tr>
                                        <th>
                                            <label class="container-chkbox">Tous
                                                <input type="radio" name="select-site" class="selectAll" >
                                                <span class="checkmark-chkbox"></span>
                                            </label>
                                        <th>Identifiants</th>
                                        <th>Adresse</th>
                                    </tr>
                                </thead>

                                <div class="div-tbody">

                                    <tbody class="tbody tbody-content scrollbar-table">
                                        {%  if  givableSites is defined and givableSites is iterable %}
                                            {% for customer in  givableSites %}
                                                {% if customer.id is defined and customer.sites is defined and customer.sites is iterable %}
                                                    {% for  site in customer.sites %}

                                                        {% if site.id is defined and site.name is defined and site.adress is defined  %}
                                                            <tr class="{{customer.name}}" >
                                                                <td>
                                                                    <label class="container-chkbox">{{site.name}}
                                                                        <input type="radio" name={{  "user[sites][enseigne][" ~  customer.id  ~ "][]" }} value="{{ site.id }}">
                                                                        <span class="checkmark-chkbox"></span>
                                                                    </label>
                                                                </td>
                                                                <td>Bobigny</td>
                                                                <td>{{site.adress}} </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endfor  %}
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </tbody>
                                </div>

                            </table>
                        </div>
                    </div>

                </div>

                <div class="form-content-btn">
                    <button name="btn-user-valide" class="btn btn-user-valide">Valide</button>
                </div>

            </form>
        </article>

    </section>    
{%  endblock %}

