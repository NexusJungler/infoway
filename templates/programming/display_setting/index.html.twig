{% extends 'base.html.twig' %}

{% block title %}DisplaySetting index{% endblock %}

{% block body %}
    <h1>DisplaySetting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ScreensQuantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for display_setting in display_settings %}
            <tr>
                <td>{{ display_setting.id }}</td>
                <td>{{ display_setting.name }}</td>
                <td>{{ display_setting.screensQuantity }}</td>
                <td>
                    <a href="{{ path('programming_display_setting_show', {'id': display_setting.id}) }}">show</a>
                    <a href="{{ path('programming_display_setting_edit', {'id': display_setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('programming_display_setting_new') }}">Create new</a>#}
{% endblock %}
