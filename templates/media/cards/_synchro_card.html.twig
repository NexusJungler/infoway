{% for synchro in synchros %}

    <div class="synchro_container synchro card " id="card_{{ synchro.id }}" data-media_type="synchro" data-created_date="{{ synchro.createdAt }}" data-media_diff_start="{{ synchro.diffusionStart }}" data-orientation="{{ synchro.orientation | lower }}"
         data-media_diff_end="{{ synchro.diffusionEnd }}" data-customer="{{ synchro.customer }}" data-products="{{ (synchro.productIds is not empty) ? synchro.productIds|join(', ') : 'none' }}"
         data-criterions="{{ (synchro.criterionIds is not empty) ? synchro.criterionIds|join(', ') : 'none' }}" data-categories="{{ (synchro.categorieIds is not empty) ? synchro.categorieIds|join(', ') : 'none' }}"
         data-tags="{{ (synchro.tagIds is not empty) ? synchro.tagIds|join(', ') : 'none' }}">

        <div class="container top">

            <div class="left">

                <div class="select_media_input_container">
                    <input type="checkbox" class="select_media_input">
                </div>

                <div class="synchro_name_container">
                    <p class="synchro_name"> {{ synchro.name }} </p>
                </div>

                <div class="synchro_action_button_container">
                    <button type="button" class="synchro_action_button"><i class="fas fa-play synchro_action_button_icon" aria-hidden="true"></i></button>
                    <button type="button" class="synchro_action_button"><i class="fas fa-pause synchro_action_button_icon" aria-hidden="true"></i></button>
                    <button type="button" class="synchro_action_button restart_video_btn"><i class="fas fa-step-backward synchro_action_button_icon" aria-hidden="true"></i></button>
{#                    <button type="button" class="synchro_action_button drag_video_btn"><i class="fas fa-arrows-alt" aria-hidden="true"></i></button>#}
                </div>

            </div>

            <div class="right">

                <div class="media_actions_shortcuts_container">

                    <div class="shortcut shortcut_diff_date_modification {% if synchro.diffusionEnd | date('d-m-Y') | get_date_diff_from_now < 0 or synchro.diffusionEnd | date('d-m-Y') | get_date_diff_from_now <= 14 %}alert_date{% endif %}">
                        <i class="far fa-clock" aria-hidden="true"></i>
                    </div>

                    <div class="shortcut">
                        <i class="fas fa-euro-sign" aria-hidden="true"></i>
                    </div>

                    <div class="shortcut">
                        <i class="fas fa-link shortcut_product_association" aria-hidden="true"></i>
                    </div>

                    <div class="shortcut">
                        <i class="fas fa-spinner" aria-hidden="true"></i>
                    </div>

                </div>

            </div>

        </div>

